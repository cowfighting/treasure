<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_dict_result">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/W1"
        android:orientation="vertical">

        <com.xycoding.treasure.view.AutoFitSizeTextView
            android:id="@+id/fit_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Take"
            android:textColor="@color/G20"
            android:textSize="@dimen/S30"
            app:fitLine="1"
            app:minTextSize="@dimen/S20" />

        <com.xycoding.treasure.view.AutoLineLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:horizontalSpacing="8dp"
            app:verticalSpacing="2dp">

            <TextView
                android:id="@+id/tv_phonetic1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_volume_up_off"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:text="英式发音"
                android:textColor="@color/G20"
                android:textSize="@dimen/S14" />

            <TextView
                android:id="@+id/tv_phonetic2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_volume_up_off"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:orientation="vertical"
                android:paddingRight="16dp"
                android:text="美式发音"
                android:textColor="@color/G20"
                android:textSize="@dimen/S14" />

        </com.xycoding.treasure.view.AutoLineLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.3"
            android:text="vt. 拿，取；采取；接受；买，花费；耗费（时间等）\nvi. 拿；获得\nn. 捕获量；看法；利益，盈益；"
            android:textColor="@color/G20" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_ad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我是广告，你是啥？"
            android:textColor="@color/B1" />

    </LinearLayout>

</layout>
