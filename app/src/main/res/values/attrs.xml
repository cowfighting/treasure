<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="minTextSize" format="reference|dimension" />

    <declare-styleable name="AutoResizeTextView">
        <attr name="minLinesDecrease" format="integer" />
        <attr name="minTextSize" />
        <attr name="gapTextSize" format="reference" />
    </declare-styleable>

    <declare-styleable name="AutoFitSizeTextView">
        <attr name="fitLine" format="integer" />
        <attr name="addEllipsis" format="boolean" />
        <attr name="minTextSize" />
    </declare-styleable>

    <declare-styleable name="ImageEndTextView">
        <attr name="imageEnd" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialCircularProgressBar">
        <attr name="progressColor" format="color|reference" />
        <attr name="progressWidth" format="dimension|reference" />
    </declare-styleable>

</resources>