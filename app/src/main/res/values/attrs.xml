<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fitLine" format="integer" />
    <attr name="minTextSize" format="reference|dimension" />

    <declare-styleable name="AutoFitSizeEditText">
        <attr name="hintTextSize" format="reference|dimension" />
        <attr name="minTextSize" />
    </declare-styleable>

    <declare-styleable name="AutoFitSizeTextView">
        <attr name="fitLine" />
        <attr name="addEllipsis" format="boolean" />
        <attr name="minTextSize" />
    </declare-styleable>

    <declare-styleable name="ImageEndTextView">
        <attr name="imageEnd" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialCircularProgressBar">
        <attr name="progressColor" format="color|reference" />
        <attr name="progressWidth" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="AutoLineLayout">
        <attr name="verticalSpacing" format="reference|dimension" />
        <attr name="horizontalSpacing" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="HandwritingView">
        <attr name="penWidth" format="dimension" />
        <attr name="penColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_radius" format="dimension" />
        <attr name="rb_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="HeaderViewPager">
        <attr name="hvp_topOffset" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="InteractiveLineGraphView">
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelTextColor" format="color" />
        <attr name="labelSeparation" format="dimension" />
        <attr name="axisThickness" format="dimension" />
        <attr name="axisColor" format="color" />
        <attr name="dataThickness" format="dimension" />
        <attr name="dataColor" format="color" />
        <attr name="gridThickness" format="dimension" />
        <attr name="gridColor" format="color" />
    </declare-styleable>

</resources>